---
/**
 * Site header â€” sticky 24-col grid nav.
 * z-40 so it sits above content but below StickyBar (z-50).
 */
import { getFeatureFlag } from '../lib/queries';

const shopEnabled = await getFeatureFlag('shop_enabled');
---

<header class="sticky top-0 z-40 bg-white border-b border-neutral-100">
  <nav class="flex items-center justify-between px-2 py-2" aria-label="Main">
    <a href="/" class="flex items-center gap-2">
      <img src="/brand/icon-k.svg" alt="Tool" class="h-[20px] w-auto" />
      <span class="text-body font-semibold uppercase tracking-widest">Tool</span>
    </a>
    <div class="flex items-center gap-[1px]">
      {shopEnabled && (
        <a href="/shop" class="nav-btn bg-yellow">Shop</a>
      )}
      <button data-cal-link="toolnyc/30min" data-cal-config='{"layout":"month_view"}' class="nav-btn bg-cyan cursor-pointer border-none">Book</button>
      <a href="/admin/login" class="nav-btn bg-lite-gray text-caption-gray hover:text-neutral-900">Login</a>
    </div>
  </nav>
</header>

<style>
  .nav-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 6px 14px;
    font-size: 13px;
    line-height: 18px;
    font-weight: 500;
    color: #000;
    text-decoration: none;
    transition: opacity 0.15s ease;
  }
  .nav-btn:hover {
    opacity: 0.75;
  }
</style>
