---
/**
 * Sticky bottom CTA bar â€” 24-col grid with centered clock and booking CTA.
 * z-50 to stay above all other content including the header.
 */
---

<div class="fixed bottom-0 left-0 right-0 z-50 bg-black text-white" data-anim="sticky-bar">
  <div class="site-grid items-center py-[10px]">
    <a href="/" class="col-span-1 md:col-span-4 flex items-center gap-2">
      <img src="/brand/icon-k.svg" alt="Tool" class="h-[18px] w-auto invert" />
    </a>
    <span class="col-span-3 md:col-span-16 text-body text-white text-center" style="font-variant-numeric: tabular-nums;" id="sticky-clock"></span>
    <div class="col-span-2 md:col-span-4 flex justify-end">
      <button data-cal-link="toolnyc/30min" data-cal-config='{"layout":"month_view"}' class="text-body cmyk-highlight px-2 py-1 cursor-pointer border-none whitespace-nowrap">Let's talk</button>
    </div>
  </div>
</div>

<script>
  function updateStickyClock() {
    const el = document.getElementById('sticky-clock');
    if (!el) return;
    const now = new Date();
    el.textContent = now.toLocaleTimeString('en-US', {
      timeZone: 'America/New_York',
      hour: 'numeric',
      minute: '2-digit',
      hour12: true,
    }) + ' NYC';
  }
  updateStickyClock();
  setInterval(updateStickyClock, 10_000);
</script>
