---
interface Props {
  title?: string;
}

const { title = 'Admin' } = Astro.props;
const { pathname } = Astro.url;

const navItems = [
  { href: '/admin', label: 'Dashboard' },
  { href: '/admin/portfolio', label: 'Portfolio' },
  { href: '/admin/writing', label: 'Writing' },
  { href: '/admin/clients', label: 'Clients' },
  { href: '/admin/inquiries', label: 'Inquiries' },
  { href: '/admin/shop', label: 'Shop' },
  { href: '/admin/orders', label: 'Orders' },
  { href: '/admin/site', label: 'Site Content' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" sizes="48x48" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <title>{title} | Tool Admin</title>
    <style>
      .mobile-sidebar {
        transform: translateX(-100%);
        transition: transform 250ms ease-in-out;
      }
      .mobile-sidebar.open {
        transform: translateX(0);
      }
      .mobile-overlay {
        opacity: 0;
        pointer-events: none;
        transition: opacity 250ms ease-in-out;
      }
      .mobile-overlay.open {
        opacity: 1;
        pointer-events: auto;
      }
    </style>
  </head>
  <body class="bg-neutral-50 text-neutral-900">
    <!-- Mobile header bar -->
    <header class="sticky top-0 z-40 flex h-12 items-center border-b border-neutral-200 bg-white px-4 md:hidden">
      <button
        id="mobile-menu-open"
        type="button"
        class="mr-3 flex items-center justify-center"
        aria-label="Open menu"
      >
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
          <line x1="3" y1="5" x2="17" y2="5" />
          <line x1="3" y1="10" x2="17" y2="10" />
          <line x1="3" y1="15" x2="17" y2="15" />
        </svg>
      </button>
      <span class="text-sm font-bold tracking-widest uppercase">Tool Admin</span>
    </header>

    <!-- Mobile overlay -->
    <div id="mobile-overlay" class="mobile-overlay fixed inset-0 z-50 bg-black/40 md:hidden"></div>

    <!-- Mobile sidebar -->
    <aside id="mobile-sidebar" class="mobile-sidebar fixed inset-y-0 left-0 z-50 w-56 border-r border-neutral-200 bg-white p-4 md:hidden">
      <div class="mb-6 flex items-center justify-between">
        <span class="text-sm font-bold tracking-widest uppercase">Tool Admin</span>
        <button
          id="mobile-menu-close"
          type="button"
          class="flex items-center justify-center"
          aria-label="Close menu"
        >
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
            <line x1="5" y1="5" x2="15" y2="15" />
            <line x1="15" y1="5" x2="5" y2="15" />
          </svg>
        </button>
      </div>
      <nav class="flex flex-col gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'block rounded px-3 py-2 text-sm',
              pathname === item.href || (item.href !== '/admin' && pathname.startsWith(item.href))
                ? 'bg-neutral-900 text-white'
                : 'text-neutral-600 hover:bg-neutral-100',
            ]}
          >
            {item.label}
          </a>
        ))}
      </nav>
      <form method="POST" action="/api/auth/logout" class="mt-8">
        <button type="submit" class="text-sm text-neutral-400 hover:text-neutral-600">
          Log out
        </button>
      </form>
    </aside>

    <div class="flex min-h-screen">
      <!-- Desktop sidebar -->
      <aside class="w-56 shrink-0 border-r border-neutral-200 bg-white p-4 hidden md:block">
        <div class="mb-6 text-sm font-bold tracking-widest uppercase">Tool Admin</div>
        <nav class="flex flex-col gap-1">
          {navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                'block rounded px-3 py-2 text-sm',
                pathname === item.href || (item.href !== '/admin' && pathname.startsWith(item.href))
                  ? 'bg-neutral-900 text-white'
                  : 'text-neutral-600 hover:bg-neutral-100',
              ]}
            >
              {item.label}
            </a>
          ))}
        </nav>
        <form method="POST" action="/api/auth/logout" class="mt-8">
          <button type="submit" class="text-sm text-neutral-400 hover:text-neutral-600">
            Log out
          </button>
        </form>
      </aside>

      <!-- Main content -->
      <main class="flex-1 p-6 md:p-10" id="main-content">
        <slot />
      </main>
    </div>

    <script>
      const openBtn = document.getElementById('mobile-menu-open');
      const closeBtn = document.getElementById('mobile-menu-close');
      const overlay = document.getElementById('mobile-overlay');
      const sidebar = document.getElementById('mobile-sidebar');

      function openMenu() {
        sidebar?.classList.add('open');
        overlay?.classList.add('open');
        document.body.style.overflow = 'hidden';
      }

      function closeMenu() {
        sidebar?.classList.remove('open');
        overlay?.classList.remove('open');
        document.body.style.overflow = '';
      }

      openBtn?.addEventListener('click', openMenu);
      closeBtn?.addEventListener('click', closeMenu);
      overlay?.addEventListener('click', closeMenu);
    </script>
  </body>
</html>
