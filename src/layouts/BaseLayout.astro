---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Tool â€” Brand, Design, and Web Development', description = 'Brand, design, and web development. New York.' } = Astro.props;
const siteUrl = (Astro.locals.runtime?.env?.PUBLIC_SITE_URL as string) || 'https://tool.nyc';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <link rel="preload" href="/fonts/SpaceGrotesk-Variable.woff2" as="font" type="font/woff2" crossorigin />
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <slot />
    <script>
      import '../scripts/animations';
    </script>
  </body>
</html>
