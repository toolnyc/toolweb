---
import Admin from '../../layouts/Admin.astro';
import { getSupabaseAdmin } from '../../lib/env';

const supabaseAdmin = getSupabaseAdmin();

let error = '';
let success = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const flagId = formData.get('flag_id') as string;
  const enabled = formData.get('enabled') === 'true';

  const { error: updateError } = await supabaseAdmin
    .from('feature_flags')
    .update({ enabled })
    .eq('id', flagId);

  if (updateError) {
    error = updateError.message;
  } else {
    success = 'Flag updated';
  }
}

const { data: flags } = await supabaseAdmin
  .from('feature_flags')
  .select('*')
  .order('flag_key');

const featureFlags = flags || [];
---

<Admin title="Features">
  {error && <p class="mb-4 bg-red-50 text-red-600 p-3 rounded">{error}</p>}
  {success && <p class="mb-4 bg-green-50 text-green-700 p-3 rounded">{success}</p>}

  <div class="mb-8">
    <h1 class="text-2xl font-bold">Feature Flags</h1>
    <p class="text-neutral-600 mt-1">Toggle features on and off without deploying</p>
  </div>

  <div class="bg-white rounded border border-neutral-200">
    {featureFlags.length === 0 ? (
      <div class="p-12 text-center">
        <p class="text-neutral-500">No feature flags configured</p>
      </div>
    ) : (
      <div class="divide-y divide-neutral-100">
        {featureFlags.map((flag: any) => (
          <div class="flex items-center justify-between p-6">
            <div>
              <p class="font-mono text-sm font-semibold">{flag.flag_key}</p>
              {flag.description && (
                <p class="text-sm text-neutral-500 mt-1">{flag.description}</p>
              )}
              <p class="text-xs text-neutral-400 mt-1">
                Updated: {new Date(flag.updated_at).toLocaleDateString('en-US', {
                  month: 'short', day: 'numeric', year: 'numeric',
                  hour: 'numeric', minute: '2-digit'
                })}
              </p>
            </div>
            <form method="POST">
              <input type="hidden" name="flag_id" value={flag.id} />
              <input type="hidden" name="enabled" value={String(!flag.enabled)} />
              <button
                type="submit"
                class:list={[
                  'relative inline-flex h-6 w-11 items-center rounded-full transition-colors',
                  flag.enabled ? 'bg-neutral-900' : 'bg-neutral-300',
                ]}
                aria-label={`Toggle ${flag.flag_key}`}
              >
                <span
                  class:list={[
                    'inline-block h-4 w-4 rounded-full bg-white transition-transform',
                    flag.enabled ? 'translate-x-6' : 'translate-x-1',
                  ]}
                />
              </button>
            </form>
          </div>
        ))}
      </div>
    )}
  </div>
</Admin>
