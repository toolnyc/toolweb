---
import Admin from '../../../layouts/Admin.astro';
import FileUpload from '../../../components/FileUpload.astro';
import { getSupabaseAdmin } from '../../../lib/env';

const supabaseAdmin = getSupabaseAdmin();
const { id } = Astro.params;

let portfolioItem: any = null;
let galleryImages: any[] = [];
let error = '';
let success = '';

if (id) {
  const { data } = await supabaseAdmin
    .from('portfolio_items')
    .select('*')
    .eq('id', id)
    .single();

  if (!data) {
    return Astro.redirect('/admin/portfolio');
  }

  portfolioItem = data;

  // Fetch gallery images for case studies
  const { data: images } = await supabaseAdmin
    .from('case_study_images')
    .select('*')
    .eq('portfolio_item_id', id)
    .order('sort_order');

  galleryImages = images ?? [];
}

if (Astro.request.method === 'POST' && id) {
  const formData = await Astro.request.formData();
  const action = formData.get('action');

  if (action === 'delete') {
    const { error: deleteError } = await supabaseAdmin
      .from('portfolio_items')
      .delete()
      .eq('id', id);

    if (deleteError) {
      error = deleteError.message;
    } else {
      return Astro.redirect('/admin/portfolio');
    }
  } else {
    const { error: updateError } = await supabaseAdmin
      .from('portfolio_items')
      .update({
        title: formData.get('title'),
        description: formData.get('description') || null,
        category: formData.get('category'),
        media_url: formData.get('media_url'),
        media_type: formData.get('media_type'),
        thumbnail_url: formData.get('thumbnail_url') || null,
        external_url: formData.get('external_url') || null,
        display_size: formData.get('display_size'),
        sort_order: parseInt(formData.get('sort_order') as string) || 0,
        status: formData.get('status'),
        is_case_study: formData.get('is_case_study') === 'on',
        slug: formData.get('slug') || null,
        problem: formData.get('problem') || null,
        solution: formData.get('solution') || null,
        impact: formData.get('impact') || null,
        updated_at: new Date().toISOString(),
      })
      .eq('id', id);

    if (updateError) {
      error = updateError.message;
    } else {
      success = 'Portfolio item updated';
      const { data } = await supabaseAdmin
        .from('portfolio_items')
        .select('*')
        .eq('id', id)
        .single();
      if (data) portfolioItem = data;
    }
  }
}
---

<Admin title={`Edit: ${portfolioItem?.title || 'Portfolio Item'}`}>
  {error && <p class="mb-4 bg-red-50 text-red-600 p-3 rounded">{error}</p>}
  {success && <p class="mb-4 bg-green-50 text-green-700 p-3 rounded">{success}</p>}

  <div class="mb-8">
    <h1 class="text-2xl font-bold">Edit Portfolio Item</h1>
  </div>

  {portfolioItem && (
    <>
      <form method="POST" class="bg-white rounded border border-neutral-200 p-6 max-w-2xl">
        <div class="space-y-6">
          <div>
            <label for="title" class="block text-sm font-semibold mb-2">Title *</label>
            <input
              type="text"
              id="title"
              name="title"
              value={portfolioItem.title}
              required
              class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
            />
          </div>

          <div>
            <label for="description" class="block text-sm font-semibold mb-2">Description</label>
            <textarea
              id="description"
              name="description"
              rows="4"
              class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
            >{portfolioItem.description}</textarea>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="category" class="block text-sm font-semibold mb-2">Category *</label>
              <select
                id="category"
                name="category"
                required
                class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
              >
                <option value="motion" selected={portfolioItem.category === 'motion'}>Motion</option>
                <option value="graphic" selected={portfolioItem.category === 'graphic'}>Graphic</option>
                <option value="web" selected={portfolioItem.category === 'web'}>Web</option>
                <option value="brand" selected={portfolioItem.category === 'brand'}>Brand</option>
              </select>
            </div>

            <div>
              <label for="media_type" class="block text-sm font-semibold mb-2">Media Type *</label>
              <select
                id="media_type"
                name="media_type"
                required
                class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
              >
                <option value="image" selected={portfolioItem.media_type === 'image'}>Image</option>
                <option value="video" selected={portfolioItem.media_type === 'video'}>Video</option>
              </select>
            </div>
          </div>

          <FileUpload
            name="media_url"
            label="Media File *"
            accept="image/jpeg,image/png,image/webp,image/gif,video/mp4"
            currentUrl={portfolioItem.media_url}
          />

          <div>
            <FileUpload
              name="thumbnail_url"
              label="Thumbnail Image"
              accept="image/jpeg,image/png,image/webp,image/gif"
              currentUrl={portfolioItem.thumbnail_url || ''}
            />
            <p id="video-thumbnail-hint" class={`text-xs text-amber-600 mt-1 ${portfolioItem.media_type === 'video' ? '' : 'hidden'}`}>Recommended: upload a poster image for video items</p>
          </div>

          <div>
            <label for="external_url" class="block text-sm font-semibold mb-2">External URL</label>
            <input
              type="text"
              id="external_url"
              name="external_url"
              value={portfolioItem.external_url || ''}
              class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
            />
          </div>

          <div class="border-t border-neutral-200 pt-6">
            <label class="flex items-center gap-2 cursor-pointer">
              <input
                type="checkbox"
                id="is_case_study"
                name="is_case_study"
                checked={portfolioItem.is_case_study}
                class="w-4 h-4"
              />
              <span class="text-sm font-semibold">Case Study</span>
            </label>
            <p class="text-xs text-neutral-500 mt-1">Enable to create a dedicated /work/[slug] page for this project.</p>
          </div>

          <div id="case-study-fields" class={portfolioItem.is_case_study ? '' : 'hidden'}>
            <div class="space-y-6">
              <div>
                <label for="slug" class="block text-sm font-semibold mb-2">URL Slug</label>
                <div class="flex items-center gap-2">
                  <span class="text-sm text-neutral-500">/work/</span>
                  <input
                    type="text"
                    id="slug"
                    name="slug"
                    value={portfolioItem.slug || ''}
                    placeholder="project-name"
                    class="flex-1 px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
                  />
                </div>
              </div>

              <div>
                <label for="problem" class="block text-sm font-semibold mb-2">Problem</label>
                <textarea
                  id="problem"
                  name="problem"
                  rows="3"
                  placeholder="2-3 sentences. What was wrong."
                  class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
                >{portfolioItem.problem}</textarea>
              </div>

              <div>
                <label for="solution" class="block text-sm font-semibold mb-2">Solution</label>
                <textarea
                  id="solution"
                  name="solution"
                  rows="3"
                  placeholder="2-3 sentences. What you did."
                  class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
                >{portfolioItem.solution}</textarea>
              </div>

              <div>
                <label for="impact" class="block text-sm font-semibold mb-2">Impact</label>
                <textarea
                  id="impact"
                  name="impact"
                  rows="2"
                  placeholder="1-3 lines. Metrics or a client quote."
                  class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
                >{portfolioItem.impact}</textarea>
              </div>

              <!-- Gallery Images -->
              <div class="border-t border-neutral-200 pt-6">
                <h3 class="text-sm font-semibold mb-4">Gallery Images</h3>

                <div id="gallery-list" class="space-y-4 mb-6">
                  {galleryImages.map((img) => (
                    <div class="gallery-item flex items-start gap-3 p-3 bg-neutral-50 border border-neutral-200 rounded" data-id={img.id}>
                      <img
                        src={img.media_url}
                        alt={img.caption || ''}
                        class="w-20 h-20 object-cover rounded border border-neutral-200 flex-shrink-0"
                      />
                      <div class="flex-1 space-y-2">
                        <input
                          type="text"
                          value={img.caption || ''}
                          placeholder="Caption"
                          class="gallery-caption w-full px-2 py-1.5 text-sm border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
                        />
                        <div class="flex items-center gap-2">
                          <label class="text-xs text-neutral-500">Order:</label>
                          <input
                            type="number"
                            value={img.sort_order}
                            class="gallery-sort-order w-16 px-2 py-1 text-sm border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
                          />
                          <button
                            type="button"
                            class="gallery-save-btn ml-auto px-2 py-1 text-xs text-neutral-600 border border-neutral-300 rounded hover:bg-neutral-100"
                          >
                            Save
                          </button>
                          <button
                            type="button"
                            class="gallery-delete-btn px-2 py-1 text-xs text-red-600 border border-red-200 rounded hover:bg-red-50"
                          >
                            Delete
                          </button>
                        </div>
                      </div>
                    </div>
                  ))}
                  {galleryImages.length === 0 && (
                    <p class="text-sm text-neutral-400 gallery-empty-msg">No gallery images yet.</p>
                  )}
                </div>

                <div id="gallery-add" class="border border-dashed border-neutral-300 rounded p-4">
                  <h4 class="text-sm font-medium mb-3">Add Image</h4>
                  <FileUpload
                    name="gallery_image_url"
                    label="Image"
                    accept="image/jpeg,image/png,image/webp,image/gif"
                  />
                  <div class="mt-3 flex items-end gap-3">
                    <div class="flex-1">
                      <label class="block text-xs text-neutral-500 mb-1">Caption</label>
                      <input
                        type="text"
                        id="gallery-new-caption"
                        placeholder="Optional caption"
                        class="w-full px-2 py-1.5 text-sm border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
                      />
                    </div>
                    <div>
                      <label class="block text-xs text-neutral-500 mb-1">Order</label>
                      <input
                        type="number"
                        id="gallery-new-sort-order"
                        value="0"
                        class="w-16 px-2 py-1.5 text-sm border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
                      />
                    </div>
                    <button
                      type="button"
                      id="gallery-add-btn"
                      class="px-3 py-1.5 text-sm bg-neutral-900 text-white rounded hover:opacity-90 disabled:opacity-50"
                    >
                      Add
                    </button>
                  </div>
                  <p id="gallery-add-error" class="text-sm text-red-600 mt-2 hidden"></p>
                </div>
              </div>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="display_size" class="block text-sm font-semibold mb-2">Display Size *</label>
              <select
                id="display_size"
                name="display_size"
                required
                class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
              >
                <option value="small" selected={portfolioItem.display_size === 'small'}>Small</option>
                <option value="medium" selected={portfolioItem.display_size === 'medium'}>Medium</option>
                <option value="large" selected={portfolioItem.display_size === 'large'}>Large</option>
              </select>
            </div>

            <div>
              <label for="sort_order" class="block text-sm font-semibold mb-2">Sort Order</label>
              <input
                type="number"
                id="sort_order"
                name="sort_order"
                value={portfolioItem.sort_order}
                class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
              />
            </div>
          </div>

          <div>
            <label for="status" class="block text-sm font-semibold mb-2">Status *</label>
            <select
              id="status"
              name="status"
              required
              class="w-full px-3 py-2 border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900"
            >
              <option value="draft" selected={portfolioItem.status === 'draft'}>Draft</option>
              <option value="published" selected={portfolioItem.status === 'published'}>Published</option>
            </select>
          </div>
        </div>

        <div class="flex gap-4 mt-8">
          <a href="/admin/portfolio" class="px-4 py-2 text-neutral-600 hover:text-neutral-900">
            Back to Portfolio
          </a>
          <button type="submit" class="admin-submit-btn px-4 py-2 bg-neutral-900 text-white rounded hover:opacity-90 disabled:opacity-50" data-default-text="Save Changes">
            Save Changes
          </button>
        </div>
      </form>

      <div class="mt-8 pt-8 border-t border-neutral-200 max-w-2xl">
        <form method="POST" onsubmit="return confirm('Delete this portfolio item? This cannot be undone.')">
          <input type="hidden" name="action" value="delete" />
          <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
            Delete Portfolio Item
          </button>
        </form>
      </div>
    </>
  )}
</Admin>

<script>
  document.querySelectorAll<HTMLFormElement>('form[method="POST"]').forEach(form => {
    form.addEventListener('submit', () => {
      const btn = form.querySelector<HTMLButtonElement>('.admin-submit-btn');
      if (btn) {
        btn.disabled = true;
        btn.textContent = 'Saving...';
      }
    });
  });

  // Toggle case study fields visibility
  const caseStudyCheckbox = document.getElementById('is_case_study') as HTMLInputElement;
  const caseStudyFields = document.getElementById('case-study-fields');
  if (caseStudyCheckbox && caseStudyFields) {
    caseStudyCheckbox.addEventListener('change', () => {
      caseStudyFields.classList.toggle('hidden', !caseStudyCheckbox.checked);
    });
  }

  const mediaTypeEl = document.getElementById('media_type');
  const videoThumbnailHint = document.getElementById('video-thumbnail-hint');
  if (mediaTypeEl && videoThumbnailHint) {
    const mediaTypeSelect = mediaTypeEl as unknown as HTMLSelectElement;
    mediaTypeSelect.addEventListener('change', () => {
      videoThumbnailHint.classList.toggle('hidden', mediaTypeSelect.value !== 'video');
    });
  }

  // Auto-detect media_type from uploaded file URL
  const mediaUrlInput = document.querySelector<HTMLInputElement>('input[name="media_url"]');
  if (mediaUrlInput && mediaTypeEl) {
    const mediaTypeSelect = mediaTypeEl as unknown as HTMLSelectElement;
    mediaUrlInput.addEventListener('change', () => {
      const url = mediaUrlInput.value;
      if (url && /\.mp4$/i.test(url)) {
        mediaTypeSelect.value = 'video';
        mediaTypeSelect.dispatchEvent(new Event('change'));
      } else if (url && /\.(webp|jpg|jpeg|png|gif)$/i.test(url)) {
        mediaTypeSelect.value = 'image';
        mediaTypeSelect.dispatchEvent(new Event('change'));
      }
    });
  }

  // -- Gallery image CRUD --
  const galleryList = document.getElementById('gallery-list');
  const addBtn = document.getElementById('gallery-add-btn') as HTMLButtonElement | null;
  const addError = document.getElementById('gallery-add-error') as HTMLElement | null;

  // Get portfolio item ID from the URL
  const portfolioItemId = window.location.pathname.split('/').pop();

  function createGalleryItemElement(imgData: { id: string; media_url: string; caption: string | null; sort_order: number }): HTMLElement {
    const item = document.createElement('div');
    item.className = 'gallery-item flex items-start gap-3 p-3 bg-neutral-50 border border-neutral-200 rounded';
    item.dataset.id = imgData.id;

    const img = document.createElement('img');
    img.src = imgData.media_url;
    img.alt = imgData.caption || '';
    img.className = 'w-20 h-20 object-cover rounded border border-neutral-200 flex-shrink-0';
    item.appendChild(img);

    const content = document.createElement('div');
    content.className = 'flex-1 space-y-2';

    const captionInput = document.createElement('input');
    captionInput.type = 'text';
    captionInput.value = imgData.caption || '';
    captionInput.placeholder = 'Caption';
    captionInput.className = 'gallery-caption w-full px-2 py-1.5 text-sm border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900';
    content.appendChild(captionInput);

    const controls = document.createElement('div');
    controls.className = 'flex items-center gap-2';

    const orderLabel = document.createElement('label');
    orderLabel.className = 'text-xs text-neutral-500';
    orderLabel.textContent = 'Order:';
    controls.appendChild(orderLabel);

    const sortInput = document.createElement('input');
    sortInput.type = 'number';
    sortInput.value = String(imgData.sort_order);
    sortInput.className = 'gallery-sort-order w-16 px-2 py-1 text-sm border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-neutral-900';
    controls.appendChild(sortInput);

    const saveBtn = document.createElement('button');
    saveBtn.type = 'button';
    saveBtn.className = 'gallery-save-btn ml-auto px-2 py-1 text-xs text-neutral-600 border border-neutral-300 rounded hover:bg-neutral-100';
    saveBtn.textContent = 'Save';
    controls.appendChild(saveBtn);

    const deleteBtn = document.createElement('button');
    deleteBtn.type = 'button';
    deleteBtn.className = 'gallery-delete-btn px-2 py-1 text-xs text-red-600 border border-red-200 rounded hover:bg-red-50';
    deleteBtn.textContent = 'Delete';
    controls.appendChild(deleteBtn);

    content.appendChild(controls);
    item.appendChild(content);

    return item;
  }

  function attachGalleryHandlers(item: HTMLElement) {
    const id = item.dataset.id;
    if (!id) return;

    const captionInput = item.querySelector('.gallery-caption') as HTMLInputElement;
    const sortInput = item.querySelector('.gallery-sort-order') as HTMLInputElement;
    const saveBtn = item.querySelector('.gallery-save-btn') as HTMLButtonElement;
    const deleteBtn = item.querySelector('.gallery-delete-btn') as HTMLButtonElement;

    saveBtn?.addEventListener('click', async () => {
      saveBtn.disabled = true;
      saveBtn.textContent = 'Saving...';
      try {
        const res = await fetch('/api/case-study-images', {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            id,
            caption: captionInput.value,
            sort_order: parseInt(sortInput.value) || 0,
          }),
        });
        if (!res.ok) {
          const errData = await res.json() as Record<string, string>;
          alert(errData.error || 'Failed to save');
        } else {
          saveBtn.textContent = 'Saved';
          setTimeout(() => { saveBtn.textContent = 'Save'; }, 1000);
        }
      } catch {
        alert('Failed to save');
      } finally {
        saveBtn.disabled = false;
        if (saveBtn.textContent === 'Saving...') saveBtn.textContent = 'Save';
      }
    });

    deleteBtn?.addEventListener('click', async () => {
      if (!confirm('Delete this gallery image?')) return;
      deleteBtn.disabled = true;
      try {
        const res = await fetch(`/api/case-study-images?id=${id}`, { method: 'DELETE' });
        if (!res.ok) {
          const errData = await res.json() as Record<string, string>;
          alert(errData.error || 'Failed to delete');
        } else {
          item.remove();
          if (galleryList && galleryList.querySelectorAll('.gallery-item').length === 0) {
            const emptyMsg = document.createElement('p');
            emptyMsg.className = 'text-sm text-neutral-400 gallery-empty-msg';
            emptyMsg.textContent = 'No gallery images yet.';
            galleryList.appendChild(emptyMsg);
          }
        }
      } catch {
        alert('Failed to delete');
        deleteBtn.disabled = false;
      }
    });
  }

  // Attach handlers to server-rendered gallery items
  document.querySelectorAll<HTMLElement>('.gallery-item').forEach(attachGalleryHandlers);

  // Add new gallery image
  addBtn?.addEventListener('click', async () => {
    const urlInput = document.querySelector('#gallery-add input[name="gallery_image_url"]') as HTMLInputElement | null;
    const captionInput = document.getElementById('gallery-new-caption') as HTMLInputElement;
    const sortInput = document.getElementById('gallery-new-sort-order') as HTMLInputElement;

    const mediaUrl = urlInput?.value?.trim();
    if (!mediaUrl) {
      if (addError) {
        addError.textContent = 'Upload an image first.';
        addError.classList.remove('hidden');
      }
      return;
    }

    if (addError) addError.classList.add('hidden');
    addBtn.disabled = true;
    addBtn.textContent = 'Adding...';

    try {
      const res = await fetch('/api/case-study-images', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          portfolio_item_id: portfolioItemId,
          media_url: mediaUrl,
          caption: captionInput.value || null,
          sort_order: parseInt(sortInput.value) || 0,
        }),
      });

      const respData = await res.json() as { id: string; media_url: string; caption: string | null; sort_order: number; error?: string };

      if (!res.ok) {
        if (addError) {
          addError.textContent = respData.error || 'Failed to add image';
          addError.classList.remove('hidden');
        }
        return;
      }

      // Remove empty message if present
      const emptyMsg = galleryList?.querySelector('.gallery-empty-msg');
      emptyMsg?.remove();

      // Build new gallery item using safe DOM construction
      const newItem = createGalleryItemElement(respData);
      galleryList?.appendChild(newItem);
      attachGalleryHandlers(newItem);

      // Reset the add form
      captionInput.value = '';
      sortInput.value = '0';
      // Reset the FileUpload component
      const fileUploadWrapper = document.querySelector('#gallery-add .file-upload-wrapper') as HTMLElement | null;
      if (fileUploadWrapper) {
        const removeBtn = fileUploadWrapper.querySelector('.file-upload-remove-btn') as HTMLButtonElement | null;
        removeBtn?.click();
      }
    } catch {
      if (addError) {
        addError.textContent = 'Failed to add image';
        addError.classList.remove('hidden');
      }
    } finally {
      addBtn.disabled = false;
      addBtn.textContent = 'Add';
    }
  });
</script>
