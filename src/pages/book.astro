---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyBar from '../components/StickyBar.astro';
---

<BaseLayout title="Book â€” Tool">
  <Header />
  <main class="pb-12" id="main-content">
    <div class="site-grid py-6">
      <div class="col-span-6 md:col-span-8 mb-4">
        <p class="text-body font-medium">Book a call</p>
        <p class="text-body text-caption-gray mt-1">Pick a time that works for you.</p>
      </div>
    </div>
    <div class="site-grid">
      <div class="col-span-6 lg:col-span-24" id="cal-inline" style="min-height: 80vh;"></div>
    </div>
    <div class="site-grid py-4">
      <p class="col-span-6 md:col-span-8 text-body text-caption-gray">
        Prefer email? <a href="mailto:hello@tool.nyc" class="hover:text-neutral-900 transition-colors">hello@tool.nyc</a>
      </p>
    </div>
  </main>
  <Footer />
  <StickyBar />
</BaseLayout>

<script is:inline>
  Cal("inline", {
    calLink: "toolnyc/30min",
    elementOrSelector: "#cal-inline",
    config: { layout: "month_view" },
  });
</script>
