---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyBar from '../components/StickyBar.astro';
import '../styles/global.css';
---

<BaseLayout title="Book — Tool">
  <Header />
  <main class="pb-14 pt-20">
    <div class="mx-auto max-w-3xl px-6 py-12 md:py-24">
      <h1 class="text-3xl font-bold mb-2 text-center">Let's talk</h1>
      <p class="text-neutral-500 text-center mb-10">Pick a time that works for you.</p>

      <!-- Cal.com embed placeholder — replace data-cal-link with actual Cal.com username -->
      <div class="rounded border border-neutral-200 overflow-hidden" style="min-height: 600px;">
        <iframe
          src="https://cal.com"
          style="width: 100%; height: 700px; border: none;"
          title="Book a call"
          loading="lazy"
        ></iframe>
      </div>

      <p class="text-center text-sm text-neutral-400 mt-6">
        Prefer email? Reach out at <a href="mailto:hello@tool.nyc" class="underline hover:text-neutral-600">hello@tool.nyc</a>
      </p>
    </div>
  </main>
  <Footer />
  <StickyBar />
</BaseLayout>
